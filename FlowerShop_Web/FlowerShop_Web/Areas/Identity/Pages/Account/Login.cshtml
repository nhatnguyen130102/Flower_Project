        @* Login with other services *@
        <div class="flex flex-wrap gap-4">
            <a href="#" class="flex gap-2 rounded-full px-4 py-3 text-gray-600 outline outline-1 outline-gray-200 hover:bg-black hover:text-white" style="width: fit-content;">
                <i class="fa-brands fa-facebook"></i>
                <div class="whitespace-nowrap">Login with Facebook</div>
            </a>
            <a href="#" class="flex gap-2 rounded-full px-4 py-3 text-gray-600 outline outline-1 outline-gray-200 hover:bg-black hover:text-white" style="width: fit-content;">
                <i class="fa-brands fa-google"></i>
                <div class="whitespace-nowrap">Login with Google</div>
            </a>
        </div>

        <form id="account" method="post">
            <div class="grid grid-cols-3 items-center">
                <hr />
                <div class="text-center text-gray-600">Or</div>
                <hr />
            </div>
            <div class="space-y-5">
                <div>
                    <label for="email" class="font-medium">Email</label><br />
                    <input type="text" asp-for="Input.Email" class="my-2 w-full rounded-full px-4 py-3 placeholder-gray-300 outline outline-1 outline-gray-200" placeholder="Enter your email" />
                </div>
                <div>
                    <div class="flex justify-between">
                        <label for="password" class="font-medium">Password</label>
                        @* <a href="#" class="text-green-900 hover:text-green-700 hover:underline">Forgot Password?</a> *@
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <input asp-for="Input.Password" type="password" class="my-2 w-full rounded-full px-4 py-3 placeholder-gray-300 outline outline-1 outline-gray-200" placeholder="Enter your password" />
                </div>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div class="row-auto">
                <button id="login-submit" type="submit" class="w-full rounded-full bg-green-900 py-3 text-white hover:bg-green-700">Login</button>
            </div>
        </form>
        <div class="row flex justify-center gap-2">
            <div>Don't have an account?</div>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-green-900 hover:text-green-700 hover:underline">Register</a>
        </div>
        <div class="my-3">
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </div>
    </div>
</section>


