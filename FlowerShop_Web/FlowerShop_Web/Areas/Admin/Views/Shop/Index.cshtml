@model IEnumerable<FlowerShop_Web.Models.Flower_Models.Shop>

@{
    ViewData["Title"] = "Index";
    Layout ="~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Shop</h1>

<div class="tbl-container">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Shop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_Shop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address_Shop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone_Shop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Locations)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Shop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_Shop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address_Shop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone_Shop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Locations)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
                    <td>
                        <a href="@Url.Action("Edit", "Shop", new { id = item.ID_Shop })">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <a href="@Url.Action("Details", "Shop", new { id = item.ID_Shop })">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                        <a href="@Url.Action("Delete", "Shop", new { id = item.ID_Shop })">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<form method="post" asp-action="ExportToExcel" asp-controller="Shop">
    <button type="submit">Export to Excel</button>
</form>




<form method="post" asp-action="ImportExcel" asp-controller="Shop" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Import from Excel</button>
</form>

