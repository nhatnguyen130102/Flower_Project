@model Flower_Models.Bill

@{
    ViewData["Title"] = "billDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_Bill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_Bill)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_Customer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_Voucher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_Voucher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total_Bill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total_Bill)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subtotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveredAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveredAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                ID Bill
            </th>
            <th>
                ID Product
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BillDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Bill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>

            </tr>
        }
    </tbody>
</table>
