@model List<Flower_Models.ApplicationUser>
@using Flower_Models;

@using Flower_Repository;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Role
            </th>
            <th>
                Branch
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var getuser = await UserManager.FindByIdAsync(user.Id);
            var roles = await UserManager.GetRolesAsync(user);
            roles.ToList();

            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    @foreach (var item in roles)
                    {
                        @item
                    }
                </td>
                <td>
                    @{
                        var shop = _context.Shops.Where(x => x.ID_Shop == user.ID_Shop).FirstOrDefault();
                    } 
                    @if(shop != null)
                    {
                        @shop.Name_Shop
                    }
                    else
                    {
                        <p>No</p>
                    }

                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Role" asp-route-id="@user.Id">Delete</a>
                </td>

            </tr>

        }
    </tbody>
</table>

