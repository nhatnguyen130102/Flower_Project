<!-- Views/ShoppingCart/ViewCart.cshtml -->
@model Flower_Models.ShoppingCart

<h2>Your Shopping Cart</h2>

@if (Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your shopping cart is empty.</p>
}
