@{
    ViewData["Title"] = "getVoucherView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Flower_Models.Bill

<div class="w-full space-y-8 px-20 py-12">
    <div class="flex items-end justify-between">
        <h2 class="text-4xl font-bold uppercase">Discount</h2>
        <p>
            Total:
            @if (Model != null)
            {
                <span class="text-2xl font-bold">
                    @Model.Subtotal
                </span>
            }
        </p>
        @*<a class="min-w-fit rounded-sm border bg-black px-4 py-2 text-white hover:border-black" href="orderconfirmation.html">Next</a>*@

        <button class="min-w-fit rounded-sm border bg-black px-4 py-2 text-white hover:border-black">
            <a asp-action="confirmOrderView" asp-controller="Order">
                Continue
            </a>
        </button>
    </div>
    <div class="grid grid-cols-1 gap-y-6 p-12 shadow-lg lg:grid-cols-2 lg:gap-6">
        <div class="flex h-12 w-full space-x-6 lg:col-span-2">
            <form asp-action="getVoucherView" method="post" class="flex w-2/3 space-x-4">
                <select id="code" name="code" asp-items="@ViewBag.Voucher" class="w-3/4 rounded-sm border px-4 py-2">
                    <option value="">Select Voucher</option>
                </select>
                <button type="submit" class="w-1/4 rounded-sm border bg-black px-4 py-2 text-white hover:border-black">Check</button>
            </form>
            <div class="flex w-1/3 items-center justify-around">
                <p class="text-xl font-medium">Discounted:</p>
                @if (ViewBag.Discount != null)
                {
                    <p class="text-left text-2xl font-bold">@ViewBag.Discount</p>
                }
            </div>
        </div>
    </div>
    <a asp-action="getInfoView" asp-controller="Order" class="flex space-x-4 ps-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
        </svg>
        <p>Back</p>
    </a>
</div>

