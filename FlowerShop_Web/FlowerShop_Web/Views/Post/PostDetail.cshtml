@model Flower_Models.Post
@* Regex.Replace(@Model.Title, "s+", " ").Trim(); *@
<section>
    <div>
        <img class="w-full relative opacity-75" src="https://images.unsplash.com/photo-1502977249166-824b3a8a4d6d?auto=format&fit=crop&q=80&w=2080&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Mountain" />
        <div class="m-10 px-6 py-4 absolute top-24 md:translate-y-1/4 bg-white shadow-lg rounded-sm">
            <span class="mb-2 inline-block text-xs text-gray-500">October 23, 2023</span>
            <div class="break-words text-3xl font-bold">@Model.Title</div>
            <div class="mt-2 flex items-center justify-between py-2">
                <div class="flex space-x-3">
                    <span class="rounded-full bg-gray-100 px-3 py-2 text-xs">#PinkLily</span>
                    <span class="rounded-full bg-gray-100 px-3 py-2 text-xs">#NewYear</span>
                </div>

                <a asp-action="Post" asp-controller="Post" class="mb-2 inline-block cursor-pointer rounded-sm bg-black px-4 py-2 text-sm font-semibold text-white hover:bg-yellow-400 hover:text-black">View Similar</a>
            </div>
            <hr class="mt-4">
            <p class="text-gray-600 text-justify break-words whitespace-pre-line">
                @Model.Content
            </p>
            <div class="uppercase text-gray-400 text-sm mt-5 mb-4">by @Model.CreatedBy</div>
        </div>
    </div>
</section>
